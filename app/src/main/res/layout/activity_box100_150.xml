<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickConnect"
            android:text="Connect Usb Printer" />

        <AutoCompleteTextView
            android:id="@+id/totxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TO">

            <requestFocus />
        </AutoCompleteTextView>


        <EditText
            android:id="@+id/invoicetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INVOICE NO"
            android:inputType="text" />


        <EditText
            android:id="@+id/labelsizetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LABEL SIZE"
            android:inputType="text" />

        <EditText
            android:id="@+id/quantitytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number" />

        <EditText
            android:id="@+id/addresstxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ADDRESS"
            android:inputType="text"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/copytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Copy"
            android:inputType="text"
            tools:visibility="visible" />

        <Button
            android:id="@+id/printbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="print"
            android:text="Print Sticker" />

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="onScan"
            android:text="Scan " />

        <Button
            android:id="@+id/calibrate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="calibratekores"
            android:text="Calibration " />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="calibratekores"
            android:text="BACK" />

        <TextView
            android:id="@+id/labelsizetxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="visible"
            tools:visibility="visible" />


    </LinearLayout>

</RelativeLayout>